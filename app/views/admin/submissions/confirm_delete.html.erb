<div class="page-header">
    <h1>Delete Submission</h1>
</div><!-- .page-header -->

<div class="row">

  <div class="span10">

    <%= form_for @submission, {:url => admin_submission_path(@submission), :method => :delete} do |f| %>

        <p>Are you sure that you want to delete this submission? All votes and user data associated with this entry will be lost forever.</p>

        <div class="form-actions">
          <%= button_tag "Confirm and Delete", {:id => 'confirm_delete', :class => 'btn btn-danger'} %>
          <%= link_to "Cancel", admin_submissions_path, {:class => 'btn'} %>
        </div>

      </fieldset>

    <% end %>

  </div><!-- .span10 -->

  <div class="span6">
  </div><!-- .span6 -->

</div><!-- .row -->