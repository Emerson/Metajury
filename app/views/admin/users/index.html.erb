<div class="page-header">
    <h1>All Users</h1>
</div><!-- .page-header -->

<ul class="pills">
  <li class="active"><%= link_to 'All Users', admin_users_path, {:id => 'admin_users'} %></li>
  <li><%= link_to 'New User', new_admin_user_path, {:id => 'new_admin_user'} %></li>
</ul>

<table class="zebra-striped admin_users">
  <thead>
    <tr>
      <th class='email'>Email</th>
      <th class='first_name'>First Name</th>
      <th class='last_name'>Last Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %> <%= content_tag(:span, 'Unconfirmed', {:class => 'label warning'}) unless user.confirmed? %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_user_path(user), {:class => 'btn small primary edit_admin_user_link', :id => "user_#{user.id}"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>