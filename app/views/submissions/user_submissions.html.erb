<div id="user_submissions" class="user_submissions content" data-homepage="logged-in">

    <div class="page-header">
        <h1><%= @user.username %>'s Submissions</h1>
    </div><!-- .page-header -->

    <div class="row">

      <div class="span9">
        <% if @submissions.empty? %>
          <p>Oh my, <%= @user.username %> has not submitted any links yet.</p>
        <% else %>
          <%= render :partial => 'submissions/submission', :collection => @submissions %>
        <% end %>

        <%= will_paginate @submissions %>

      </div>

      <div class="span3">

        <%= render 'layouts/dev_news' %>

      </div>

    </div><!-- .row -->
 
</div>