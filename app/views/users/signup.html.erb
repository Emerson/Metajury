<div class="page-header">
    <h1>Signup <small> It's fast and easy...</small></h1>
</div><!-- .page-header -->

<div class="row">

  <div class="span12">

    <%= form_for @user, {:html => {:class => 'form-horizontal'}} do |f| %>

      <fieldset>

        <div class="control-group <%= error_class_for(f.object, :email) %>">
          <%= f.label :email, 'Email', :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :email, {:class => 'input-xlarge', :value => @user.email} %>
            <%= error_message_for(f.object, :email) %>
          </div><!-- .controls -->
        </div><!-- .control-group -->

        <div class="control-group <%= error_class_for(f.object, :username) %>">
          <%= f.label :username, 'Username', :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :username, {:class => 'input-xlarge', :value => @user.username} %>
            <%= error_message_for(f.object, :username) %>
          </div><!-- .controls -->
        </div><!-- .control-group -->
 
        <div class="control-group <%= error_class_for(f.object, :password) %>">
          <%= f.label :password, 'Password', :class => 'control-label' %>
          <div class="controls">
            <%= f.password_field :password, {:class => 'input-xlarge'} %>
            <%= error_message_for(f.object, :password) %>
          </div><!-- .controls -->
        </div><!-- .control-group -->

        <div class="form-actions">
          <%= button_tag "Signup", {:id => 'signup', :class => 'btn btn-primary'} %>
          &nbsp;&nbsp;<em>or</em>&nbsp;&nbsp;
          <%= link_to 'Login', login_path, {:class => 'btn '} %>
        </div>

      </fieldset>

    <% end %>

  </div><!-- .span12 -->

</div><!-- .row -->
